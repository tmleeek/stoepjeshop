<config>
    <modules>
        <Mymonki_Ship2pay>
            <version>1.0.6</version>
        </Mymonki_Ship2pay>
    </modules>
    <global>
        <models>
        	<ship2pay>
            	<class>Mymonki_Ship2pay_Model</class>
            </ship2pay>
        </models>
        <blocks>
 			<ship2pay>
                <class>Mymonki_Ship2pay_Block</class>
            </ship2pay>
            <checkout>
                  <rewrite>
						<onepage_payment_methods>Mymonki_Ship2pay_Block_Onepage_Payment_Methods</onepage_payment_methods>	
                  </rewrite>
            </checkout>
        </blocks>
        <helpers>
            <ship2pay>
                <class>Mymonki_Ship2pay_Helper</class>
            </ship2pay>
        </helpers>
	</global>
	<frontend>
		<translate>
			<modules>
				<Mymonki_Ship2pay>
					<files>
						<default>Mymonki_Ship2pay.csv</default>
						<alternative>Mage_Sales.csv</alternative>
					</files>
				</Mymonki_Ship2pay>
				<Mage_Sales>
					<files>
						<alternative>Mymonki_Invoice.csv</alternative>
					</files>
				</Mage_Sales>
			</modules>
		</translate>
	</frontend>
	<adminhtml>
		<translate>
			<modules>
				<Mymonki_Ship2pay>
					<files>
						<default>Mymonki_Ship2pay.csv</default>
						<alternative>Mage_Sales.csv</alternative>
					</files>
				</Mymonki_Ship2pay>
				<Mage_Sales>
					<files>
						<alternative>Mymonki_Ship2pay.csv</alternative>
					</files>
				</Mage_Sales>
			</modules>
		</translate>
	</adminhtml>
	<default>
		<shipping>
			<ship2pay>
				<active>0</active>
				<ship2pay>a:0:{}</ship2pay>
			</ship2pay>
		</shipping>
	</default>
</config>