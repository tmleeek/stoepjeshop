<?xml version="1.0"?>
<config>
    <tabs>
		<dd translate="label" module="dailydeal">
            <label>Developers-inc</label>
            <sort_order>200</sort_order>
		</dd>
    </tabs>
	<sections>
		<dailydeal translate="label" module="dailydeal">
			<label>Daily Deal</label>
			<tab>dd</tab>
			<frontend_type>text</frontend_type>
			<sort_order>10</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<configuration translate="label">
					<label>Configuration</label>
					<frontend_type>text</frontend_type>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<enabled translate="label">
							<label>Enable Daily Deal</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</enabled>
						<header_links translate="label">
							<label>Display in Header Links</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</header_links>
						<qty translate="label">
							<label>Display Remaining QTY</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>4</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</qty>
						<offset translate="label">
							<label>Countdown offset</label>
							<frontend_type>select</frontend_type>
							<source_model>dailydeal/offset</source_model>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</offset>
						<no_deal_message translate="label comment">
							<label>No Deal Message</label>
							<frontend_type>textarea</frontend_type>
							<sort_order>6</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>This is the message that will appear in case the product quantity or the countdown reaches 0 and there is no new deal scheduled.</comment>
						</no_deal_message>
						<notify translate="label">
							<label>Notify Admin</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>7</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>If Yes - the admin will be notified via email when a deal expires and there is no new deal scheduled.</comment>
						</notify>
						<admin_email translate="label comment">
							<label>Admin Email</label>
							<frontend_type>text</frontend_type>
							<sort_order>8</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</admin_email>
					</fields>
				</configuration>
				<sidebar_configuration translate="label">
					<label>Sidebar Configuration</label>
					<frontend_type>text</frontend_type>
					<sort_order>20</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<left_sidebar translate="label">
							<label>Display in Left Sidebar</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</left_sidebar>
						<right_sidebar translate="label">
							<label>Display in Right Sidebar</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</right_sidebar>
						<display_name translate="label">
							<label>Display Product Name</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</display_name>
						<display_price translate="label">
							<label>Display Product Price</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>4</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</display_price>
						<display_qty translate="label">
							<label>Display Remaining QTY</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</display_qty>
					</fields>
				</sidebar_configuration>
				<countdown_configuration translate="label">
					<label>Countdown Configuration</label>
					<frontend_type>text</frontend_type>
					<sort_order>30</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>	
						<bg_main translate="label">
							<label>Background Color</label>
							<frontend_type>text</frontend_type> 
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</bg_main>
						<bg_color translate="label">
							<label>Digit Background Color</label>
							<frontend_type>text</frontend_type> 
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</bg_color>
						<alpha translate="label">
							<label>Digit Gradient Alpha %</label>
							<frontend_type>text</frontend_type> 
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</alpha>
						<textcolor translate="label">
							<label>Digit Color</label>
							<frontend_type>text</frontend_type> 
							<sort_order>4</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</textcolor>
						<txt_color translate="label">
							<label>Sec/Min/Hour Color</label>
							<frontend_type>text</frontend_type> 
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</txt_color>
						<sec_text translate="label">
							<label>Seconds Text</label>
							<frontend_type>text</frontend_type> 
							<sort_order>6</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</sec_text>
						<min_text translate="label">
							<label>Minutes Text</label>
							<frontend_type>text</frontend_type> 
							<sort_order>7</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</min_text>
						<hour_text translate="label">
							<label>Hours Text</label>
							<frontend_type>text</frontend_type> 
							<sort_order>8</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</hour_text>
					</fields>
				</countdown_configuration>
			</groups>
        </dailydeal>
    </sections>
</config>