<?xml version="1.0"?>
<layout version="1.0">
	<storepicker_index_index>
		<remove name="cart_sidebar" />
		<reference name="head">
			<action method="addJs"><script>storepicker/store.js</script></action>
			<block type="storepicker/stores" name="storepicker_head" template="storepicker/head.phtml"/>
		</reference>
		<reference name="root">
			<action method="setTemplate"><template>page/1column.phtml</template></action>
		</reference>
		<reference name="content">
			<block type="storepicker/stores" name="storepicker_index" template="storepicker/index.phtml"/>
		</reference>
	</storepicker_index_index>
</layout>
